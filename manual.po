msgstr "سي و سي++"

msgid "http://opengroup.org/onlinepubs/007908799/xsh/strftime.html"
msgstr "http://opengroup.org/onlinepubs/007908799/xsh/strftime.html"

msgid "PHP"
msgstr "بي.إتش.بي"

msgid ""
"<a0>http://php.net/manual/en/function.strftime.php</a0> <s1/>or <s2/"
"><a3><f4>http://www.php.net/date</f4></a3>"
msgstr ""
"<a0>http://php.net/manual/en/function.strftime.php</a0> <s1/>أو "
"<s2/><a3><f4>http://www.php.net/date</f4></a3>"

msgid "Python"
msgstr "پيثون"

msgid "http://docs.python.org/library/datetime.html#strftime-strptime-behavior"
msgstr "http://docs.python.org/library/datetime.html#strftime-strptime-behavior"

msgid ".NET"
msgstr "دوت نِت"

